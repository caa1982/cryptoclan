<!-- views/auth/signup.ejs -->
<h2>Signup</h2>

<form action="/signup" method="POST" id="form-container">
  <label for="username">Email</label><br>
  <input id="username" type="text" name="email" placeholder="Your email">
  <br><br>
  <label for="password">Password</label><br>
  <input id="password" type="password" name="password" placeholder="Your password">
   <br><br>
  <label for="password">Repeat password</label><br>
  <input id="password" type="password" name="passwordRepeat" placeholder="Repeat password">

  <% if (typeof message !== "undefined") { %>
    <div class="error-message"><%= message %></div>
  <% } %>
  <br><br>
    <button>Create account</button>
    <p>
    <a href="/auth/facebook">Sign up with facebook</a> | <a href="/auth/linkedin">Sign up with linkedin</a><br>
    <p>


  <p class="account-message">
    Do you already have an account?
    <a href="/login">Login</a>
  </p>
</form>