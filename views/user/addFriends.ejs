<div class="container-fluid">
    <div class="jumbotron">
        <div class="row form-group">
            <div class="col">
                <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                    <div class="input-group-addon" style="width: 2.6rem"><i class="fa fa-user"></i></div>
                    <input class="form-control" name="name" type="text" placeholder="Name" value="">
                </div>
            </div>
            <div class="col">
                <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                    <div class="input-group-addon" style="width: 2.6rem"><i class="fa fa-bitcoin"></i></div>
                    <input class="form-control" name="coins" type="text" placeholder="Coins" value="">
                </div>
            </div>
        </div>
        <div class="row form-group">
            <div class="col">
                <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                    <div class="input-group-addon" style="width: 2.6rem"><i class="fa fa-map"></i></div>
                    <input class="form-control" name="city" type="text" placeholder="City" value="">
                </div>
            </div>
            <div class="col">
                <div class="input-group mb-2 mr-sm-2 mb-sm-0">
